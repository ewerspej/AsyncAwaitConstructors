<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:asyncInitializer="using:AsyncAwaitConstructors.Examples.AsyncInitializer"
  x:Class="AsyncAwaitConstructors.Examples.AsyncInitializer.AsyncInitializerPage"
  x:DataType="asyncInitializer:AsyncInitializerViewModel"
  Title="AsyncInitializerPage">

  <Grid RowDefinitions="*,auto">
    <VerticalStackLayout
      Grid.Row="0"
      BindableLayout.ItemsSource="{Binding ProductList}"
      Spacing="10">
      <BindableLayout.ItemTemplate>
        <DataTemplate x:DataType="x:String">
          <Label
            Text="{Binding .}"
            VerticalTextAlignment="Center"
            VerticalOptions="Center" />
        </DataTemplate>
      </BindableLayout.ItemTemplate>
    </VerticalStackLayout>
  </Grid>

</ContentPage>