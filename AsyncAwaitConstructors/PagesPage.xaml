<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="AsyncAwaitConstructors.PagesPage">

  <Grid>
    <VerticalStackLayout VerticalOptions="Center">

      <Button
        Text="async void - Shell"
        Clicked="OnAsyncVoidButtonClicked" />

      <Button
        Text="discarded Task - Shell"
        Clicked="OnDiscardedTaskButtonClicked" />

      <Button
        Text="async initializer v1 - Shell"
        Clicked="OnAsyncInitializerButtonClicked" />

      <Button
        Text="async initializer v2 - push after await"
        Clicked="OnAsyncInitializer2ButtonClicked" />

      <Button
        Text="async initializer v2 - push before await"
        Clicked="OnAsyncInitializer3ButtonClicked" />

      <Button
        Text="async initializer v2 - Shell"
        Clicked="OnAsyncInitializer4ButtonClicked" />

      <Button
        Text="async factory"
        Clicked="OnAsyncFactoryButtonClicked" />

    </VerticalStackLayout>
  </Grid>
 
</ContentPage>
