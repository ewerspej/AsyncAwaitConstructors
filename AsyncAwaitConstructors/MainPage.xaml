  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="AsyncAwaitConstructors.MainPage">

  <Grid>
    <VerticalStackLayout VerticalOptions="Center">

      <Button
        Text="async void"
        Clicked="OnAsyncVoidButtonClicked" />

